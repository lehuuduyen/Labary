  $data= DB::table('companys')
            ->select(["*",DB::raw(" 6371 * ACOS( COS( RADIANS($lat) ) * COS( RADIANS( `latitude` ) ) * COS( RADIANS(`longitude` ) - RADIANS($long) ) + SIN( RADIANS($lat) ) * SIN( RADIANS( `latitude` ) ) )  AS distance")])
            ->havingRaw("distance<=10")
            ->orderBy('distance')
            ->limit(20)
            ->get();
